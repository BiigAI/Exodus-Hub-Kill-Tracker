<Application x:Class="Exodus_Hub_Kill_Tracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Exodus_Hub_Kill_Tracker"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Modern Color Palette -->
        <Color x:Key="PrimaryColor">#6366F1</Color>
        <Color x:Key="PrimaryHoverColor">#4F46E5</Color>
        <Color x:Key="PrimaryActiveColor">#4338CA</Color>
        <Color x:Key="BackgroundColor">#0F172A</Color>
        <Color x:Key="SurfaceColor">#1E293B</Color>
        <Color x:Key="SurfaceHoverColor">#334155</Color>
        <Color x:Key="TextPrimaryColor">#F8FAFC</Color>
        <Color x:Key="TextSecondaryColor">#CBD5E1</Color>
        <Color x:Key="TextMutedColor">#64748B</Color>
        <Color x:Key="BorderColor">#334155</Color>
        <Color x:Key="AccentColor">#10B981</Color>
        
        <!-- Brushes -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHoverColor}"/>
        <SolidColorBrush x:Key="PrimaryActiveBrush" Color="{StaticResource PrimaryActiveColor}"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
        <SolidColorBrush x:Key="SurfaceHoverBrush" Color="#2C3442"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMutedColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        
        <!-- Clean Background - Simple Radial Gradient for Depth -->
        <RadialGradientBrush x:Key="BackgroundGradientBrush" Center="0.3,0.3" RadiusX="1.2" RadiusY="1.2">
            <GradientStop Color="#1E293B" Offset="0"/>
            <GradientStop Color="#0F172A" Offset="1"/>
        </RadialGradientBrush>
    </Application.Resources>
</Application>
